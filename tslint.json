{
    "rules": {
        "no-construct": true,
        "no-var-requires": true,
        "no-var-keyword": false,
        "semicolon": [
            "always"
        ],
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-module",
            "check-operator",
            "check-separator",
            "check-type",
            "check-typecast"
        ],
        "quotemark": [
            "single"
        ]
    }
}