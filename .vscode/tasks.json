{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "command": "tsc",
      "label": "build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "type": "shell",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "dedicated"
      },
      "args": [
        "-w",
        "-p",
        "."
      ],
      "isBackground": true,
      "problemMatcher": "$tsc-watch"
    },
    {
      "command": "npm test",
      "label": "test",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "dedicated"
      },
      "args": [
        "test"
      ]
    }
  ]
}