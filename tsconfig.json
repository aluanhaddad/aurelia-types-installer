{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "esnext"
    ],
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "inlineSourceMap": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "rootDir": "src",
    "listEmittedFiles": true
  },
  "exclude": [
    "node_modules",
    "jspm_packages",
    "test/testapp",
    "test"
  ]
}