{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es5",
    "lib": [
      "esnext"
    ],
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "inlineSourceMap": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "noFallthroughCasesInSwitch": true,
    "outDir": "dist",
    "rootDir": "src",
    "listEmittedFiles": true,
    "declaration": true,
    "types": [],
    "pretty": true,
    // TODO: reenable this and reinstall tslib when import interop is correctly provided for the Node.js esm subset.
    "noEmitHelpers": false,
    "importHelpers": false,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "../test/*.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "jspm_packages",
    "test/testapp"
  ]
}